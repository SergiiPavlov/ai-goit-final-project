{
  "name": "leleka-ai-assistant-service",
  "version": "0.6.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run prisma:generate && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "echo \"(optional) add eslint later\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "node prisma/seed.cjs",
    "prisma:studio": "prisma studio",
    "kb:backfill-embeddings": "ts-node-dev --transpile-only src/scripts/kbBackfillEmbeddings.ts",
    "kb:ingest": "tsx src/scripts/kb.ingest.ts",
    "kb:clear": "tsx src/scripts/kb.clear.ts",
    "kb:self-check": "tsx src/scripts/kb.selfcheck.ts",
    "serve:widget": "npx http-server . -p 5500",
    "project:add-origin": "tsx src/scripts/project.add-origin.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "iconv-lite": "0.4.24",
    "morgan": "^1.10.0",
    "prisma": "^5.22.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.30",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": "20.x"
  }
}
